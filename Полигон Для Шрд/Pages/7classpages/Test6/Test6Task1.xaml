<Page x:Class="Полигон_Для_Шрд.Pages._7classpages.Test6.Test6Task1"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Полигон_Для_Шрд.Pages._7classpages.Test6"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Test6Task1">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition Height="4*"/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*"/>
            <ColumnDefinition Width="6*"/>
        </Grid.ColumnDefinitions>
        <TextBlock Text="Задание №1"
            Style="{StaticResource TextBlockTestTaskNummber}"/>
        <TextBlock
      Name="textBlockTaskName"
      Text="Кто впервые обнаружил броуновское движение?"
      Style="{StaticResource TextBlockTestTask}"/>
        <StackPanel Grid.Row="1"
             Grid.Column="1"
          Orientation="Vertical"
          VerticalAlignment="Center"
          HorizontalAlignment="Center">
            <RadioButton Content="И. Ньютон"
                  Style="{StaticResource radioButtonTest}"/>
            <RadioButton Content="Р. Броун" Name="rdButtonCorrectAnswer"
                  Style="{StaticResource radioButtonTest}"/>
            <RadioButton Content="Л. Гуи"
                  Style="{StaticResource radioButtonTest}"/>
        </StackPanel>
        <StackPanel Grid.Row="2"
             Grid.Column="1"
     Orientation="Horizontal"
     HorizontalAlignment="Right">
            <Button Name="btnNext" Style="{StaticResource RoundButtonTemplateTest}"
 Content="Далее"
 Grid.Row="2"
 Click="btnNext_Click"/>
        </StackPanel>
    </Grid>
</Page>
